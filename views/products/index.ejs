
<% layout('layout/boilerplate1') -%>

<%- include("../partials/flash") %> 

  <table class="table table-hover">
    <thead>
      <tr>
        <th scope="col-sm-2">
          <div class="form-check">
            <input class="form-check-input" type="checkbox" value="" id="defaultCheck1">
            <label class="form-check-label" for="defaultCheck1">

            </label>
        </th>
        <th scope="col">Id</th>
        <th scope="col">Name</th>
        <th scope="col">Phone No</th>
        <th scope="col">Email</th>
        <th scope="col ">Hobbies</th>
        
      </tr>
    </thead>
    <% for(let user of users) {%> 
    <tbody>
      <tr>
        <th scope="row">
          <div class="form-check">
            <input class="form-check-input" type="checkbox" value="" id="defaultCheck1">
            <label class="form-check-label" for="defaultCheck1">
            </label>
          </div>

        </th>
        <td><%=user._id %></td>
        <td><%=user.name %></td>
        <td><%=user.phone_no%></td>
        <td><%=user.email%></td>
        <td><%=user.hobbies%></td>
        <td>
          <div class="d-flex justify-content-center ">
            <button type="button" class="btn btn-outline-info mx-1"><a href="/products/<%=user._id%>/edit"><i class="fa-solid fa-pen-to-square"></i></a></button>

            <form action="/products/<%=user._id %>/mail" method="post">
              <button type="submit" class="btn btn-outline-warning mx-1"><i class="fa-solid fa-paper-plane"></i></i></button>

            </form>

            <form action="/products/<%=user._id%>?_method=DELETE"  method="post">
              <button type="submit" class="btn btn-outline-danger mx-1"><i class="fa-solid fa-trash-can"></i>
                 </button>
            </form>
          </div>
        </td>

      </tr>

    </tbody>
    <% } %> 
  </table>